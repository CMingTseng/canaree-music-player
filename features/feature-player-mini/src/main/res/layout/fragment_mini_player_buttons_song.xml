<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSong"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/sliding_panel_peek">

    <dev.olog.feature.presentation.base.widget.image.view.AnimatedImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@null"
        android:padding="5dp"
        app:avd="@drawable/avd_music_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vd_music_next" />

    <dev.olog.feature.presentation.base.widget.playpause.AnimatedPlayPauseImageView
        android:id="@+id/playPause"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vd_playpause_play" />

    <dev.olog.feature.presentation.base.widget.image.view.AnimatedImageView
        android:id="@+id/previous"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@null"
        android:padding="5dp"
        app:avd="@drawable/avd_music_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playPause"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vd_music_previous" />

</androidx.constraintlayout.widget.ConstraintLayout>